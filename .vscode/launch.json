  "version": "0.2.0",
  "configurations": [
    {
      "name": "ts-node - Launch & debug",
      "type": "node",
      "request": "launch",
      "runtimeArgs": ["-r", "ts-node/register"],
      "runtimeExecutable": "node",
      "args": ["--inspect", "${workspaceFolder}/server/src/app.ts"],
      "cwd": "${workspaceRoot}/server",
      "skipFiles": ["<node_internals>/**", "node_modules/**"]
    }
  ]
}
